<!-- Latest Posts Widget -->

<div class="latest-posts-widget mb-50">
    <% latestNews.forEach(news => { %>
    <% let postTime = new Date(news.postTime); %>

    <div class="single-blog-post small-featured-post d-flex">
        <div class="post-thumb">
            <a href="#"><img src=<%= news.imgPath %> alt=""></a>
        </div>
        <div class="post-data">
            <a href="#" class="post-catagory"><%= news.postCategory %></a>
            <div class="post-meta">
                <a href="#" class="post-title">
                    <h6><%= news.title %></h6>
                </a>
                <p class="post-date"><span><%= dateAndTime.format(postTime, 'hh:mm A') %></span> | <span><%= dateAndTime.format(postTime, 'MMM DD') %></span></p>
            </div>
        </div>
    </div>
    <% }); %>
</div>

<!-- popular news Widget -->
<%- include("popular-news-widget.ejs")%>

<!-- Newsletter Widget -->
<%- include("newsletter.ejs")%>


<!-- Latest Comments Widget -->
<div class="latest-comments-widget">
    <h3>Latest Comments</h3>
    <% latestComments.forEach(comment => { %>
    <% let postTime = new Date(comment.postTime); %>
    <div class="single-comments d-flex">
        <div class="comments-thumbnail mr-15">
            <img src=<%= comment.imgPath %> alt="">
        </div>
        <div class="comments-text">
            <a href="#"><%= comment.name %> <span>on</span> <%= comment.commentedPost %></a>
            <p><%= dateAndTime.format(postTime, 'hh:mm A, MMMM DD, YYYY ') %></p>
        </div>
    </div>
    <% }); %>
</div>
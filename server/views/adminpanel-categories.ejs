<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include("partials/styles.ejs")%>
    <link rel="stylesheet" href="/css/adminpanel.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <title>Admin panel V 1.0 | Categories</title>
</head>

<body>
    <div class="adminpanel">
        <%- include("partials/adminpanel-nav.ejs")%>
        <main class="adminpanel__main adminpanel__contactmessage-main">
            <div class="adminpanel_infopanel">
                <form method="post">
                    <label>Titel</label>
                    <input type="text" name="name"
                        value="<%= typeof category != 'undefined' ? category.name : '' %>">
                    <button>Gem</button>
                </form>
                <% if (typeof return_message != "undefined"){ %>
                    <h4 class=""><%= return_message %></h4>
                <% } %>
                <table>
                    <thead>
                        <tr>
                            <th>Actions</th>
                            <th>Id</th>
                            <th>Titel</th>
                        </tr>
                    </thead>

                    <% if(typeof categories != 'undefined') { %>
                    <tbody>
                        <% categories.forEach(category => { %>
                        <tr>
                            <td>
                                <a href="/admin/categories/edit/<%= category.id %>" class="link--action tablelink">Ret</a>
                                <a href="/admin/categories/delete/<%= category.id %>" class="link--warning tablelink"
                                    onclick="return confirm('Er du sikker pÃ¥ du vil slette?')">Slet</a>
                            </td>
                            <td><%= category.id %></td>
                            <td><%= category.name %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                    <% } %>
                </table>
            </div>
        </main>
    </div>

</body>

</html>